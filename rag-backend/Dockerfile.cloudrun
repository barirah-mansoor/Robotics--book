# Use a slim Python base image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Copy requirements
COPY requirements-cloudrun.txt .

# Install packages in a way that minimizes layer size and build time
RUN pip install --no-cache-dir --upgrade pip

# Install packages individually to better handle failures
RUN pip install --no-cache-dir fastapi==0.104.1 uvicorn[standard]==0.24.0.post1 python-dotenv==1.0.0

# Install core dependencies
RUN pip install --no-cache-dir qdrant-client>=1.7.0

# Install sentence transformers
RUN pip install --no-cache-dir sentence-transformers>=2.2.0

# Install SQLAlchemy components
RUN pip install --no-cache-dir psycopg2-binary sqlalchemy>=2.0.0 alembic>=1.10.0 asyncpg>=0.25.0

# Install LlamaIndex components individually to avoid pulling in heavy dependencies
RUN pip install --no-cache-dir llama-index-legacy
RUN pip install --no-cache-dir llama-index-llms-openai>=0.1.0
RUN pip install --no-cache-dir llama-index-embeddings-openai>=0.1.0
RUN pip install --no-cache-dir llama-index-vector-stores-qdrant>=0.1.0
RUN pip install --no-cache-dir "llama-index>=0.10.0,<0.11.0"

# Copy the application code
COPY . .

# Expose the port
EXPOSE 8000

# Define the command to run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]